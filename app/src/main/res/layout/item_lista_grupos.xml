<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:id="@+id/item_linear_grupo"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="11"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_grupos_nombre"
                android:layout_marginTop="3dp"
                android:alpha=".87"
                android:textSize="19sp"
                android:textColor="#000000"
                android:text="Nombre del grupo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_grupos_adicionales"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:alpha=".73"
                android:text="Datos adicionales"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_grupos_numero_alumnos"
                android:alpha=".87"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25sp"
                android:text="7"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/item_grupos_tipo"
                android:layout_gravity="center"
                android:gravity="center"
                android:alpha=".67"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="4"
                android:text="Alumnos"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/item_botones_grupo"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/item_boton_asistencias_grupo"
            android:background="#A9BCF5"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <TextView
                android:textColor="#000000"
                android:textSize="19sp"
                android:text="Asistencia"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:alpha=".2"
            android:background="#000000"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="45dp" />
        <RelativeLayout
            android:id="@+id/item_boton_trabajos_grupo"
            android:background="#A9BCF5"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <TextView
                android:textColor="#000000"
                android:textSize="19sp"
                android:text="Trabajos"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:alpha=".53"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />
</LinearLayout>