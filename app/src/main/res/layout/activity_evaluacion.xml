<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rafael.asistencia.Evaluacion">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="fill_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/evaluacion_text_nombre_trabajo"
            android:gravity="center"
            android:text="Nombre del trabajo"
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/evaluacion_text_fecha_creacion"
            android:gravity="center"
            android:text="Fecha de creación"
            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/evaluacion_text_descripcion"
            android:gravity="center"
            android:text="Descripción"
            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/evaluacion_lista_evaluacion"
        android:layout_weight="15"
        android:layout_width="fill_parent"
        android:layout_height="0dp"></ListView>
    <Button
        android:layout_gravity="center"
        android:text="Guardar"
        android:id="@+id/evaluacion_boton_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
